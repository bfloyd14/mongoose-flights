<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
<h1>All Flights</h1>
<table id="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No.</th>
      <th>Departure Date/Time</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(flight => { %>
    <tr>
      <td><%= flight.airline %></td>
      <td><%= flight.airport %></td>
      <td><%= flight.flightNo %></td>
      <td><%= flight.departs %></td>
    </tr>
    <% }) %>
  </tbody>
</table>
</main>




