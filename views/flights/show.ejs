<%- include('../partials/html-head') %>
<link rel="stylesheet" href="stylesheets/flights/show.css">
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline:</div>
    <div>
      <%= flight.airline %>
    <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Your Flight</button>
    </a>
    </div>
      <div>Airport:</div>
        <div><%= flight.airport %></div>
      <div>FlightNo:</div>
        <div><%= flight.flightNo %></div>
      <div>departs:</div>
        <div><%= flight.departs %></div>
      <div>Ticket(s):</div>
        <ul>
          <% flight.tickets.forEach(ticketHolder => { %>
          <li>Seat: <%= ticketHolder.seat %>, Price: $<%= ticketHolder.price %></li>
        <% }) %>
        </ul>
        <form 
          id="add-ticket-form" 
          action="/flights/<%= flight._id %>/tickets"
          method="POST"
          >
          <label for="seat-input">Seat:</label>
          <input type="text" name="seat" id="seat-input">
          <label for="price-input">Price:</label>
          <input type="text" name="price" id="price-input">
          <button type="submit">Add Ticket(s)</button>
      </form>     
  </section>

</main>

<%- include('../partials/footer') %>