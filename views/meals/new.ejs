<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/meals/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <p>ATTENTION, you cannot add a meal that is already added to 'Existing Meals'.</p>
  <% meals.forEach(meal => { %>
    <% meal.name %>
  <% }) %>
  <form id="add-meal-form" action="/meals" method="post">
    <label for="meal-input">Meal:</label>
    <input type="text" name="name" id="meal-input">
    <button type="submit">Add Meal</button>
  </form>
  <h2>Existing Meals:</h2>
  <ul>
    <% meals.forEach(meal =>{ %>
      <li>
        <%= meal.name %>
      </li>
  <% }) %>
  </ul>
</main>

<%- include('../partials/footer') %>